<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LED_activity">

 <TextView
     android:id="@+id/le1"
     android:layout_width="200dp"
     android:layout_height="80dp"
     android:gravity="center"
     android:text="Lights"
     android:textSize="40dp" />

 <TextView
     android:id="@+id/le2"
     android:layout_width="200dp"
     android:layout_height="80dp"
     android:layout_below="@+id/le1"
     android:gravity="center"
     android:text="Irrigation"
     android:textSize="40dp" />

 <Button
     android:id="@+id/but1on"
     android:layout_width="75dp"
     android:layout_height="70dp"
     android:layout_marginLeft="10dp"
     android:layout_toRightOf="@id/le1"
     android:gravity="center"
     android:text="ON"
     android:textSize="25dp" />

 <Button
     android:id="@+id/but2off"
     android:layout_width="75dp"
     android:layout_height="70dp"
     android:layout_below="@id/but1off"
     android:layout_marginLeft="10dp"
     android:layout_marginTop="10dp"
     android:layout_toRightOf="@id/but1on"
     android:text="OFF"
     android:textSize="25dp" />

 <Button
     android:id="@+id/but1off"
     android:layout_width="75dp"
     android:layout_height="70dp"
     android:layout_marginLeft="10dp"
     android:layout_toRightOf="@id/but1on"
     android:text="OFF"
     android:textSize="25dp" />

 <Button
     android:id="@+id/but2on"
     android:layout_width="75dp"
     android:layout_height="70dp"
     android:layout_below="@id/but1on"
     android:layout_marginLeft="10dp"
     android:layout_marginTop="10dp"
     android:layout_toRightOf="@id/le2"
     android:gravity="center"
     android:text="ON"
     android:textSize="25dp" />
</RelativeLayout>